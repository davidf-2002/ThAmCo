@model IEnumerable<ThAmCo.Events.Models.EventVM>

@{
    ViewData["Title"] = "Event List";
}

<h1>Event List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reference)
            </th>
            <th>
                Total Guests
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @item.TotalGuestsCount
            </td>
            =<td>
                    @if (!item.isFirstAider)
                    {
                        <div style="color: red;">
                            Warning, no first aider
                        </div>
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                <a asp-controller="EventGuest" asp-action="Index" 
                   asp-route-id="@item.EventId">Guest List</a>

            </td>
        </tr>
}
    </tbody>
</table>

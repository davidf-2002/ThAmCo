@model IEnumerable<ThAmCo.Events.Data.EventGuest>

@{
    ViewData["Title"] = "Index";
}

<h1>Guest Booking</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest)
            </th>
            <th>
                Attendance
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAttended)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { eventId=item.EventId, guestId=item.GuestId })
            </td>
            <td>
                @Html.ActionLink("Cancel", "Delete", new { eventId=item.EventId, guestId=item.GuestId })
            </td>
        </tr>
}
    </tbody>
</table>

@model ThAmCo.Events.Data.EventGuest

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EventGuest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <input type="hidden" asp-for="GuestId" />
            <div class="form-group">
                <label asp-for="Event.Name">Event Name:</label>
                <input type="text" asp-for="Event.Name" class="form-control" readonly />
            </div>
            
            <div class="form-group">
                <label asp-for="Guest.FirstName">Guest Name:</label>
                <input type="text" asp-for="Guest.FirstName" class="form-control" readonly />
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(model => model.HasAttended)
                <label asp-for="HasAttended" class="control-label">Has Attended</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
